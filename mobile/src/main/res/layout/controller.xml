<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <SeekBar
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#ff0000"
        android:longClickable="false"
        android:max="127"
        android:progress="127" />

    <SeekBar
        android:id="@+id/g1"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#00ff00"
        android:max="127"
        android:progress="127" />

    <SeekBar
        android:id="@+id/b1"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#0000ff"
        android:max="127"
        android:progress="127" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <SeekBar
        android:id="@+id/r2"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#ff0000"
        android:max="127"
        android:progress="127" />

    <SeekBar
        android:id="@+id/g2"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#00ff00"
        android:max="127"
        android:progress="127" />

    <SeekBar
        android:id="@+id/b2"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#0000ff"
        android:max="127"
        android:progress="127" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <SeekBar
        android:id="@+id/r3"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#ff0000"
        android:max="127"
        android:progress="127" />

    <SeekBar
        android:id="@+id/g3"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#00ff00"
        android:max="127"
        android:progress="127" />

    <SeekBar
        android:id="@+id/b3"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#0000ff"
        android:max="127"
        android:progress="127" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <SeekBar
        android:id="@+id/r4"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#ff0000"
        android:max="127"
        android:progress="127" />

    <SeekBar
        android:id="@+id/g4"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#00ff00"
        android:max="127"
        android:progress="127" />

    <SeekBar
        android:id="@+id/b4"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#0000ff"
        android:max="127"
        android:progress="127" />
</LinearLayout>